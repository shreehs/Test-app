<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_shopping_list_item"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_shopping_list_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_shopping_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:text="Flipkart"
                android:layout_toRightOf="@+id/iv_shopping_list_item"
                android:layout_centerVertical="true"/>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_star_shopping_list_item"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/ic_star_white"
                android:backgroundTint="@color/lightGrey"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/lightGrey">
            </View>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>